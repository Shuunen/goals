    "dev": "npm run build:js -- --dev",
    "lint": "stack lint",
    "postversion": "git push && git push --tags",
    "preversion": "npm run ci",
    "test": "stack test",
    "test:watch": "stack test --watch",
    "update": "stack update"
  },
  "version": "0.1.0"
