  "bugs": "https://github.com/Shuunen/goals/issues",
  "description": "web app to visualize & reach goals",
  "devDependencies": {
    "@types/mocha": "*",
    "shuunen-stack": "0.9.6",
    "npm-run-all": "*"
  },
  "files": [
    "src",
    "public"
  ],
  "homepage": "https://github.com/Shuunen/goals",
  "keywords": [
    "goals",
    "list"
  ],
  "license": "GPL-3.0",
  "name": "@shuunen/goals",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/Shuunen/goals.git"
  },
  "scripts": {
    "build": "npm run build:js -- --production --minify",
    "build:js": "stack build src/index.ts --out-dir public --format iife",
